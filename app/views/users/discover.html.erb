
<%= button_to "Discover Top Rated Movies", "/users/#{@user.id}/movies", method: :get, params: {top_rated: true}, local: true %>

<%= form_with url: "/users/#{@user.id}/movies", method: :get, local: true do |f| %>
  <%= f.label :search_for_movie %>
  <%= f.text_field :search %>
  <%= f.submit "Search" %>
<% end %>
