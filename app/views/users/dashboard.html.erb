<h1><%= @user.name %>'s Info</h1>

<p><%= button_to "Discover Movies", "/users/#{@user.id}/discover", method: :get %></p>

<div id="viewing_parties">
  <h3><%= @user.name %>'s Viewing Parties:</h3>
  <% @parties.each do |party| %>
    <p><%= party.name %></p>
  <%end%>
</div>

<div id="host_parties">
  <h3><%= @user.name %>'s Hosting Parties:</h3>
    <% @all_user_parties_host.each do |party| %>
    <p><%= party.name %></p>
  <%end%>
</div>